<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/parchment_light">

    <!-- Theme radio group -->
    <TextView
        android:id="@+id/theme_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:id="@+id/theme_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/theme_textview"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/light_theme_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Light" />

        <RadioButton
            android:id="@+id/dark_theme_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Dark" />

    </RadioGroup>

    <!-- Error switch -->
    <TextView
        android:id="@+id/error_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show errors:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theme_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <Switch
        android:id="@+id/error_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/error_textview"
        app:layout_constraintTop_toBottomOf="@+id/theme_radio_group"
        android:thumb="@drawable/custom_switch_thumb"
        android:track="@drawable/custom_switch_track"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!-- Enable mental help switch -->
    <TextView
        android:id="@+id/mental_help_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable mental help:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <Switch
        android:id="@+id/mental_help_switch"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toEndOf="@id/mental_help_textview"
        app:layout_constraintTop_toBottomOf="@+id/theme_radio_group"
        android:thumb="@drawable/custom_switch_thumb"
        android:track="@drawable/custom_switch_track"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!-- Confirm button -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_button_solid"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
