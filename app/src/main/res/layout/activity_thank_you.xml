<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/parchment_light"
    android:layout_gravity="center_vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/thank_you_image_view"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/thank_you_image"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:riv_corner_radius="12dp"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp"
        />

    <TextView
        android:id="@+id/thank_you_text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Спасибо!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/thank_you_image_view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/thank_you_text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш ответ поможет сделать это приложение лучше."
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/thank_you_text_view_1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Начать работу"
        android:textSize="18sp"
        android:layout_below="@id/thank_you_text_view_2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
